@model Bug_Tracking_System.Models.User

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>
</head>

<body class="login-page">
    <div class="container position-sticky z-index-sticky top-0">
        <div class="row">
            <div class="col-12">
            </div>
        </div>
    </div>
    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto">
                        <div class="card card-plain">
                            <div class="card-header pb-0 text-start">
                                <h4 class="font-weight-bolder">Reset Password</h4>
                                <p class="mb-0">Enter your new password and begin your task</p>
                            </div>
                            <div class="card-body">
                                <form role="form" id="ResetPassword">

                                    <div class="mb-3">
                                        <div class="input-group">
                                            <input asp-for="PasswordHash" class="form-control" id="PasswordHash" type="password" placeholder="Enter your password" name="PasswordHash" />
                                            <button class="btn btn-outline-secondary" type="button" id="togglePasswordHash">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </div>
                                        <label id="PasswordHash-error" class="error text-danger" for="PasswordHash"></label>
                                    </div>
                                    <div class="mb-3">
                                        <div class="input-group">
                                            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" type="password" aria-label="Password" placeholder="Confirm your password" name="ConfirmPassword" />
                                            <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </div>
                                        <label id="ConfirmPassword-error" class="error text-danger" for="ConfirmPassword"></label>
                                    </div>

                                    <div class="text-center">
                                            <button type="submit" id="btnSubmit" class="btn btn-lg btn-primary btn-lg w-100 mt-2 mb-0">
                                            <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                                            Change Password
                                        </button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 end-0 text-center justify-content-center flex-column">
                        <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center overflow-hidden" style="background-image: url('https://img.freepik.com/free-vector/access-control-system-abstract-concept_335657-3180.jpg?t=st=1737978934~exp=1737982534~hmac=ed6e80c1071bb53f31a1f62e89ceab6f8cefca0b3d1602a7f5b63abb41e0da02&w=740');
          background-size: cover;">
                            @* <span class="mask bg-gradient-primary opacity-6"></span> *@
                            @* <h4 class="mt-5 text-white font-weight-bolder position-relative">"Efficiency is the key to success"</h4> *@
                            @* <p class="text-white position-relative"> *@
                            @*     Log in to streamline your bug tracking process. Stay organized, resolve issues faster, and keep your projects on track with ease. *@
                            @* </p> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--   Core JS Files   -->

</body>

</html>

<style>
    /* Adjust alignment of input and button */
    .input-group {
        display: flex;
        align-items: center;
    }

        .input-group .form-control {
            border-radius: 0.375rem;
            /* Ensure the input aligns properly */
            display: flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            box-sizing: border-box;
        }

        .input-group .btn {
            border-radius: 0.375rem;
            padding: 0.375rem 0.75rem;
            /* Ensure the button aligns with the input */
            display: flex;
            align-items: end;
            justify-content: center;
            height: calc(2.5em + 0.75rem + 2px); /* Match input height */
        }

    #togglePasswordHash, #toggleConfirmPassword {
        cursor: pointer;
        background: none;
        border: none;
        color: #6c757d;
    }

        #togglePasswordHash:hover, #toggleConfirmPassword:hover {
            color: #495057;
        }

</style>

@section Scripts {
    <script src="~/js/Login.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

}