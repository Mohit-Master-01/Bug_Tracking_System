@model Bug_Tracking_System.Models.User

@{
    ViewData["BodyClass"] = "registration-page";
    ViewData["Title"] = "Google  Details";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <title>Google Details</title>
</head>

<body class="registration-page">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://www.executiveautomats.com/hubfs/What_is_bug_life_cycle_in_manual_testing_SEO.jpg'); background-position: center;">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 text-center mx-auto">
                    <h1 class="text-white mb-2 mt-5">Welcome to Bugify!</h1>
                    <h4 class="text-white">The Bug Tracking System</h4>
                    <p class="text-lead text-white">
                        Simplify your bug reporting and resolution process with BugTrack. Create an account or log in to seamlessly manage issues, collaborate with your team, and deliver flawless projects faster than ever.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                </div>
                <div class="card-body">
                    <form role="form" id="googleDetailsForm">
                        <div class="mb-3">
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username" aria-label="Name" type="text" name="UserName" />
                            <label id="UserName-error" class="error text-danger" for="UserName"></label>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" aria-label="Email" type="email" name="Email" />
                            <label id="Email-error" class="error text-danger" for="Email"></label>
                        </div>

                        <input type="hidden" name="IsAdmin" value="1" />


                        <div class="text-center">
                            <button type="submit" id="btnRegister" class="btn bg-gradient-dark w-100 my-4 mb-2">
                                <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                                Submit
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    


</body>

</html>

<style>
    /* Adjust alignment of input and button */
    .input-group {
        display: flex;
        align-items: center;
    }

        .input-group .form-control {
            border-radius: 0.375rem;
            /* Ensure the input aligns properly */
            display: flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            box-sizing: border-box;
        }

        .input-group .btn {
            border-radius: 0.375rem;
            padding: 0.375rem 0.75rem;
            /* Ensure the button aligns with the input */
            display: flex;
            align-items: end;
            justify-content: center;
            height: calc(2.5em + 0.75rem + 2px); /* Match input height */
        }

    #togglePasswordHash, #toggleConfirmPassword {
        cursor: pointer;
        background: none;
        border: none;
        color: #6c757d;
    }

        #togglePasswordHash:hover, #toggleConfirmPassword:hover {
            color: #495057;
        }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/GoogleDetails.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

}