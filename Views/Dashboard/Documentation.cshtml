                    <div id="logsCollapse" class="accordion-collapse collapse" data-bs-parent="#argonHelpAccordion">
                        <div class="accordion-body text-muted">
                            <ul>
                                <li>Track user actions (edit, delete, login, etc.)</li>
                                <li>View logs by user or date range</li>
                                <li>Clear logs securely with confirmation</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Support -->
                <div class="accordion-item border-bottom">
                    <h2 class="accordion-header" id="supportHeading">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#supportCollapse">
