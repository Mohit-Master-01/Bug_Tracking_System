    <style>

        /* Initially hide the sidebar */
        .sidenav {
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.5s ease-in-out, visibility 0s linear 0.0s;
        }

        /* Preloader should overlay everything */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: white; /* Background to cover everything */
            z-index: 1050; /* Keep above everything */
            display: flex;
            justify-content: center;
            align-items: center;
            transition: opacity 0.5s ease-out;
        }


        /* Submenu styles */
        .nav-item .submenu {
        display: none;
        list-style: none;
        padding-left: 15px;
        margin-top: 5px;
        }

        .nav-item .submenu .nav-link {
        font-size: 0.85rem;
        padding-left: 30px;
        color: #6c757d;
        transition: all 0.3s ease-in-out;
        }

        .nav-item .submenu .nav-link:hover {
        color: #000; /* Dark color on hover */
        }

        /* Toggle submenu on click */
        .nav-item.has-submenu > a {
        position: relative;
        }

        .nav-item.has-submenu > a::after {
        content: "\f107"; /* FontAwesome down arrow */
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 0.75rem;
        color: #6c757d;
        }

        /* Show submenu on active state */
        .nav-item.has-submenu.active .submenu {
        display: block;
        }

        /* Animation for submenu */
        .submenu {
        opacity: 0;
        height: 0;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
        }

        .nav-item.has-submenu.active .submenu {
        opacity: 1;
        height: auto;
        }

        html, body {
