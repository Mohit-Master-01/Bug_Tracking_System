                });
            });
        });

                     document.addEventListener("DOMContentLoaded", function () {
            const preloader = document.getElementById("preloader");
            const sidebar = document.querySelector(".sidenav");

            setTimeout(() => {
                preloader.style.opacity = "0"; // Fade-out effect
