@model Bug_Tracking_System.Models.User

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Profile Card -->
            <div class="col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center">
                        <div class="avatar avatar-xl position-relative">
                            <img src="@Model.ProfileImage" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                        </div>
                        <h5 class="mt-3">@Model.UserName</h5>
                        <p class="mb-1 text-muted">@Model.Email</p>
                        @* <span class="badge @((bool)Model.IsActive ? "bg-success" : "bg-danger")"> *@
                        @*     @((bool)Model.IsActive ? "Active" : "Inactive") *@
                        @* </span> *@
                        <span class="badge @(Model.IsActive == true ? "bg-success" : "bg-danger")">
                            @(Model.IsActive == true ? "Active" : "Inactive")
                        </span>

                        <div class="mt-3">
                            <a asp-action="EditProfile" class="btn btn-primary btn-sm">Edit Profile</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Details -->
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">Profile Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- User Info -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Username</label>
                                <p class="text-muted">@Model.UserName</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Email</label>
                                <p class="text-muted">@Model.Email</p>
                            </div>

                            <!-- Account Info -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Created Date</label>
                                <p class="text-muted">@Model.CreatedDate?.ToString("dd-MM-yyyy HH:mm")</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Email Verified</label>
                                @* <p class="text-muted">@((bool)Model.IsEmailVerified ? "Yes" : "No")</p> *@
                                <p class="text-muted">@((Model.IsEmailVerified == true) ? "Yes" : "No")</p>
                            </div>

                            <!-- Role & Project -->
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Role</label>
                                @* <p class="text-muted">@Model.Role.RoleName</p> *@
                                <p class="text-muted">@(Model.Role != null ? Model.Role.RoleName : "Not Assigned")</p>

                            </div>

                            <!-- Assigned Projects (Only for Project Managers & Developers) -->
                            @if (Model.Role?.RoleName == "Project Manager" || Model.Role?.RoleName == "Developer")
                            {
                                <div class="col-md-12">
                                    <label class="form-label fw-bold">Assigned Projects</label>
                                    @if (Model.Projects != null && Model.Projects.Any())
                                    {
                                        <ul class="list-group">
                                            @foreach (var project in Model.Projects)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <span>@project.ProjectName</span>
                                                    <span class="badge bg-primary">Active</span>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No Projects Assigned</p>
                                    }
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="text-danger">Error: User data could not be loaded.</p>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".nav-item.has-submenu > a").forEach((item) => {
                item.addEventListener("click", function (e) {
                    e.preventDefault();
                    let parent = this.parentElement;
                    parent.classList.toggle("active");
                });
            });
        });
    </script>
}
