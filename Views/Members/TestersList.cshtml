@model X.PagedList.IPagedList<Bug_Tracking_System.Models.User>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Tester's List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Tester's List</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="bg-dark">
                        <tr>
                            <th class="text-white">Profile</th>
                            <th class="text-white">Username</th>
                            <th class="text-white">Email</th>
                            <th class="text-white">Role</th>
                            <th class="text-white">Project</th>
                            <th class="text-white">Joining Date</th>
                            <th class="text-white">Status</th>
                            <th class="text-white" style="white-space: nowrap; width: 150px;">Actions</th> <!-- Prevents column from breaking -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(!string.IsNullOrEmpty(item.ProfileImage) ? item.ProfileImage : "/images/default-profile.png")"
                                         alt="Profile Image" class="rounded-circle border" width="40" height="40" />
                                </td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@(item.Role?.RoleName ?? "Not Assigned")</td>
                                <td>@(item.Project?.ProjectName ?? "Not Assigned")</td>
                                <td>@item.CreatedDate?.ToString("dd-MM-yyyy | HH:mm")</td>
                                <td>
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                        @(item.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="SaveMember" asp-route-id="@item.UserId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination UI -->
            <div class="d-flex justify-content-center">
                @Html.PagedListPager(Model, page => Url.Action("TestersList", new { page }),
                         new PagedListRenderOptions
                {
                    Display = PagedListDisplayMode.IfNeeded,
                    UlElementClasses = new[] { "pagination", "justify-content-center" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" }
                })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Members.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
