@model List<Bug_Tracking_System.Models.User>

@{
    ViewData["Title"] = "Project Manager's List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .no-data-card {
        border: 1px solid #dee2e6;
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        background: linear-gradient(145deg, #f8f9fa, #ffffff);
        box-shadow: 0 8px 16px rgba(0,0,0,0.05);
    }

    .no-data-icon {
        font-size: 4rem;
        color: #5e72e4;
        margin-bottom: 1rem;
    }

    .no-data-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #32325d;
    }

    .no-data-text {
        color: #8898aa;
        font-size: 1rem;
        margin-top: 0.5rem;
    }

    .dataTables_length select {
        padding-right: 25px !important;
        width: 80px;
    }
</style>

<div class="container-fluid py-4">
    <!-- Dashboard Metrics Section -->
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fas fa-users text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                        <div class="ms-3">
                            <p class="text-sm mb-0 text-uppercase font-weight-bo ld">Total Managers</p>
                            <p class="text-xxs">Current Page</p>
                            <h5 class="font-weight-bolder mb-0">@ViewBag.TotalManagers</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex">
                        <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                            <i class="fas fa-user-check text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                        <div class="ms-3">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Active Managers</p>
                            <p class="text-xxs">Current Page</p>
                            <h5 class="font-weight-bolder mb-0">@ViewBag.ActiveManagers</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex">
                        <div class="icon icon-shape bg-gradient-danger shadow text-center border-radius-md">
                            <i class="fas fa-user-times text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                        <div class="ms-3">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Inactive Managers</p>
                            <p class="text-xxs">Current Page</p>
                            <h5 class="font-weight-bolder mb-0">@ViewBag.InactiveManagers</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex">
                        <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                            <i class="fas fa-calendar-plus text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                        <div class="ms-3">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Joined This Month</p>
                            <p class="text-xxs">Current Page</p>
                            <h5 class="font-weight-bolder mb-0">@ViewBag.JoinedThisMonth</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Project Manager's List</h4>
            <button id="exportProductsBtn" class="btn btn-success"><i class="fas fa-file-excel"></i></button>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="projectmanagerTable" class="table table-hover align-middle text-center">
                    <thead class="bg-dark">
                        <tr>
                            <th class="text-white">Profile</th>
                            <th class="text-white">Username</th>
                            <th class="text-white">Email</th>
                            <th class="text-white">Role</th>
                            @* <th class="text-white">Handled Projects</th> *@
                            <th class="text-white">Joining Date</th>
                            <th class="text-white">Status</th>
                            <th class="text-white text-center align-middle" style="white-space: nowrap; width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(!string.IsNullOrEmpty(item.ProfileImage) ? item.ProfileImage : "/images/default-profile.png")"
                                    alt="Profile Image" class="rounded-circle border" width="40" height="40" />
                                </td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@(item.Role?.RoleName ?? "Not Assigned")</td>
                                @* <td>@(item.ManagedProjects?.Count ?? 0)</td> *@
                                <td>@item.CreatedDate?.ToString("dd-MM-yyyy | HH:mm")</td>
                                <td>
                                    <span class="badge @((bool)item.IsActive ? "bg-success" : "bg-danger")">
                                        @((bool)item.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-center align-middle">
                                    @if (ViewBag.PermissionType != "canView")
                                    {
                                        <div style="display: flex; gap: 10px; justify-content: center; align-items: center;">
                                            <a asp-action="SaveMember" asp-route-id="@item.UserId" class="btn btn-warning btn-sm" style="width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center; padding: 6px;">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="MemberDetails" asp-route-id="@item.UserId" class="btn btn-info btn-sm" style="width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center; padding: 6px;">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <p>------</p>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

           
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
           // DataTables Initialization
        $('#projectmanagerTable').DataTable({
            "order": [[3, "desc"]],
            "paging": true,
            "searching": true,
            "language": {
                "paginate": {
                    "previous": "<",
                    "next": ">"
                }
            }
        });

            document.getElementById("exportProductsBtn").addEventListener("click", function () {
                    window.location.href = "/Members/ExportProjectManagerList";
        });


        $(".delete-member").click(function (e) {
            e.preventDefault();
            var userId = $(this).data("userid");

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Members/DeleteProjectManager",
                        type: "POST",
                        data: { id: userId },
                        success: function (response) {
                            Swal.fire({
                                title: "Deleted!",
                                text: "Member has been removed.",
                                icon: "success",
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        },
                        error: function () {
                            Swal.fire("Error!", "Something went wrong.", "error");
                        }
                    });
                }
            });
        });
    </script>

    <script src="~/js/Members.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}